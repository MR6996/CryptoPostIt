<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:right="@dimen/toggle_width">
        <shape android:shape="rectangle">

            <solid android:color="@color/colorAccent" />
            <corners
                android:bottomLeftRadius="@dimen/toggle_radius"
                android:topLeftRadius="@dimen/toggle_radius" />
            <size
                android:width="@dimen/toggle_width"
                android:height="?attr/maxButtonHeight" />
            <stroke
                android:width="@dimen/toggle_stroke"
                android:color="@color/colorAccent" />
        </shape>
    </item>

    <item android:left="@dimen/toggle_width">
        <shape android:shape="rectangle">

            <solid android:color="@color/colorPrimaryLight" />
            <corners
                android:bottomRightRadius="@dimen/toggle_radius"
                android:topRightRadius="@dimen/toggle_radius" />
            <size
                android:width="@dimen/toggle_width"
                android:height="24dp" />
            <stroke
                android:width="@dimen/toggle_stroke"
                android:color="@color/colorAccent" />
        </shape>
    </item>

</layer-list>